@model UpdateDiscountDto
@{
    ViewData["Title"] = "UpdateDiscount";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Rezervasyon İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">
				<form method="post">
					<div class="card">
						<div class="card-header">
							<div class="card-title">Yeni Rezervasyon Girişi</div>
						</div>
						<input type="hidden" asp-for="DiscountID" />
						<div class="card-body">
							<div class="form-group">
								<label for="Name">Ad Soyad</label>
								<input type="text" class="form-control" asp-for="Title" id="Name">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Phone">Ad Soyad</label>
								<input type="text" class="form-control" asp-for="Description" id="Phone">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="Mail">Ad Soyad</label>
								<input type="email" class="form-control" asp-for="Mail" id="Mail">
							</div>
						</div>
						<div class="card-body">
							<div class="form-group">
								<label for="PersonCount">Ad Soyad</label>
								<input type="number" class="form-control" asp-for="PersonCount" id="PersonCount">
							</div>
						</div>
						<div class="card-action">
							<button class="btn btn-primary btn-border btn-round">Rezervasyonu Güncelle</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
